{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": "..",
    "paths": {
      "@quantbot/utils": ["./packages/utils/src"],
      "@quantbot/utils/*": ["./packages/utils/src/*"],
      "@quantbot/storage": ["./packages/storage/src"],
      "@quantbot/storage/*": ["./packages/storage/src/*"],
      "@quantbot/simulation": ["./packages/simulation/src"],
      "@quantbot/simulation/*": ["./packages/simulation/src/*"],
      "@quantbot/api-clients": ["./packages/api-clients/src"],
      "@quantbot/api-clients/*": ["./packages/api-clients/src/*"],
      "@quantbot/ohlcv": ["./packages/ohlcv/src"],
      "@quantbot/ohlcv/*": ["./packages/ohlcv/src/*"],
      "@quantbot/ingestion": ["./packages/ingestion/src"],
      "@quantbot/ingestion/*": ["./packages/ingestion/src/*"],
      "@quantbot/workflows": ["./packages/workflows/src"],
      "@quantbot/workflows/*": ["./packages/workflows/src/*"],
      "@quantbot/observability": ["./packages/observability/src"],
      "@quantbot/observability/*": ["./packages/observability/src/*"],
      "@quantbot/core": ["./packages/core/src"],
      "@quantbot/core/*": ["./packages/core/src/*"],
      "@quantbot/analytics": ["./packages/analytics/src"],
      "@quantbot/analytics/*": ["./packages/analytics/src/*"],
      "@quantbot/jobs": ["./packages/jobs/src"],
      "@quantbot/jobs/*": ["./packages/jobs/src/*"],
      "@quantbot/data-observatory": ["./packages/data-observatory/src"],
      "@quantbot/data-observatory/*": ["./packages/data-observatory/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

