{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@quantbot/utils": ["../utils/dist/index.d.ts"],
      "@quantbot/utils/*": ["../utils/dist/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/ohlcv": ["../ohlcv/src"],
      "@quantbot/ohlcv/*": ["../ohlcv/src/*"],
      "@quantbot/simulation": ["../simulation/src"],
      "@quantbot/simulation/*": ["../simulation/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../ohlcv" },
    { "path": "../simulation" }
  ]
}

