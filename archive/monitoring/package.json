{
  "name": "@quantbot/monitoring",
  "version": "1.0.0",
  "description": "Live token monitoring, real-time alerts, and call ingestion for QuantBot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "dashboard": "ts-node --transpile-only ../../scripts/monitoring/dashboard-quick.ts",
    "dashboard:load": "ts-node --transpile-only ../../scripts/monitoring/dashboard-quick.ts --load",
    "dashboard:bench": "ts-node --transpile-only ../../scripts/monitoring/dashboard-quick.ts --bench",
    "dashboard:full": "ts-node --transpile-only ../../scripts/monitoring/dashboard-quick.ts --load --bench"
  },
  "dependencies": {
    "@quantbot/core": "workspace:*",
    "@quantbot/utils": "workspace:*",
    "@quantbot/storage": "workspace:*",
    "@quantbot/api-clients": "workspace:*",
    "@quantbot/simulation": "workspace:*",
    "@quantbot/ohlcv": "workspace:*",
    "@solana/web3.js": "^1.98.4",
    "@triton-one/yellowstone-grpc": "^4.0.2",
    "axios": "^1.12.2",
    "luxon": "^3.6.1",
    "telegraf": "^4.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}

