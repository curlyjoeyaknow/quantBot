{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "paths": {
      "@jest/globals": ["tests/jest-globals.ts"],
      "@quantbot/utils": ["./packages/utils/src"],
      "@quantbot/storage": ["./packages/storage/src"],
      "@quantbot/monitoring": ["./packages/monitoring/src"],
      "@quantbot/simulation": ["./packages/simulation/src"],
      "@quantbot/services": ["./packages/services/src"],
      "@quantbot/bot": ["./packages/bot/src"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "web", "examples", "scripts/legacy/**/*"]
}
