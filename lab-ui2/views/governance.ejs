<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI â€” Governance</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <nav>
    <a href="/strategies">Strategies</a>
    <a href="/runs">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
    <a href="/truth">Truth</a>
    <a href="/policies">Policies</a>
    <a href="/optimize">Optimize</a>
    <a href="/governance" class="active">Governance</a>
  </nav>

  <main>
    <h1>Strategy Governance</h1>

    <section class="card">
      <h2>Kill Switches</h2>
      
      <div class="grid">
        <div class="kill-switch-card">
          <h3>Global Kill Switch</h3>
          <p class="hint">Pauses all strategies immediately</p>
          <div class="row">
            <button id="globalKillSwitch" class="btn-danger">Activate Global Kill Switch</button>
            <span id="globalStatus" class="status-badge">Inactive</span>
          </div>
        </div>
        
        <div class="kill-switch-card">
          <h3>Daily Loss Limit</h3>
          <p class="hint">Auto-pause when daily loss exceeds limit</p>
          <label>Max Daily Loss (USD)<br/>
            <input type="number" id="maxDailyLoss" value="1000" min="0" step="100" />
          </label>
          <div class="row">
            <span>Current: $<span id="currentDailyLoss">0.00</span></span>
            <span id="dailyLossStatus" class="status-badge">OK</span>
          </div>
        </div>
      </div>

      <div class="grid">
        <div class="kill-switch-card">
          <h3>Drawdown Limit</h3>
          <p class="hint">Auto-pause when drawdown exceeds limit</p>
          <label>Max Drawdown (%)<br/>
            <input type="number" id="maxDrawdown" value="20" min="0" max="100" step="1" />
          </label>
          <div class="row">
            <span>Current: <span id="currentDrawdown">0.0</span>%</span>
            <span id="drawdownStatus" class="status-badge">OK</span>
          </div>
        </div>
        
        <div class="kill-switch-card">
          <h3>Per-Strategy Kill Switches</h3>
          <p class="hint">Pause individual strategies</p>
          <button id="manageStrategyKillSwitches">Manage Strategy Kill Switches</button>
        </div>
      </div>
    </section>

    <section class="card">
      <h2>Strategy Approval Workflow</h2>
      
      <div class="table-scroll">
        <table id="tblApproval">
          <thead>
            <tr>
              <th>Strategy</th>
              <th>Status</th>
              <th>Min Trades</th>
              <th>Min Win Rate</th>
              <th>Max Drawdown</th>
              <th>Checklist</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </section>

    <section class="card">
      <h2>Approval Checklist</h2>
      <div id="checklist" style="background: #f9f9f9; padding: 1rem; border-radius: 4px;">
        <p style="color: #999;">Select a strategy to see approval checklist</p>
      </div>
    </section>
  </main>

  <script src="/public/governance.js"></script>
</body>
</html>

