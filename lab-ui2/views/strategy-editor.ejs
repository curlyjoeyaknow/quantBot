<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI — Strategy Editor</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <nav>
    <a href="/strategies">Strategies</a>
    <a href="/runs">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
    <a href="/truth">Truth</a>
    <a href="/policies">Policies</a>
  </nav>

  <main>
    <div class="row" style="align-items: center; margin-bottom: 1rem;">
      <h1 id="title">Strategy Editor</h1>
      <button onclick="window.location.href='/strategies'" style="margin-left: auto;">← Back</button>
    </div>

    <section class="card">
      <h2>Strategy Details</h2>
      <div class="grid">
        <div>
          <label>Strategy ID<br/>
            <input id="strategyId" readonly style="background: #f0f0f0;" />
          </label>
        </div>
        <div>
          <label>Name<br/>
            <input id="name" placeholder="Strategy name" />
          </label>
        </div>
      </div>
      
      <label>Configuration JSON<br/>
        <textarea id="config" rows="20" spellcheck="false" style="font-family: monospace; font-size: 0.9rem;"></textarea>
      </label>

      <div class="row">
        <button id="validate">Validate</button>
        <button id="format">Format JSON</button>
        <button id="save" class="btn-primary">Save Changes</button>
        <span id="msg"></span>
      </div>
    </section>

    <section class="card">
      <h2>Configuration Preview</h2>
      <div id="preview" style="background: #f9f9f9; padding: 1rem; border-radius: 4px; min-height: 200px;">
        <p style="color: #999;">Validate to see preview</p>
      </div>
    </section>

    <section class="card">
      <h2>Validation Results</h2>
      <div id="validation" style="background: #f9f9f9; padding: 1rem; border-radius: 4px;">
        <p style="color: #999;">No validation run yet</p>
      </div>
    </section>
  </main>

  <script src="/public/strategy-editor.js"></script>
</body>
</html>

