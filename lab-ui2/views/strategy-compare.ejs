<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI — Compare Strategies</title>
  <link rel="stylesheet" href="/public/style.css" />
  <style>
    .compare-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }
    .strategy-column {
      background: #f9f9f9;
      padding: 1rem;
      border-radius: 4px;
      border: 2px solid #ddd;
    }
    .strategy-column h3 {
      margin-top: 0;
      border-bottom: 2px solid #333;
      padding-bottom: 0.5rem;
    }
    .diff-highlight {
      background: #ffffcc;
      padding: 2px 4px;
      border-radius: 2px;
    }
    .diff-added {
      background: #ccffcc;
      padding: 2px 4px;
      border-radius: 2px;
    }
    .diff-removed {
      background: #ffcccc;
      padding: 2px 4px;
      border-radius: 2px;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/strategies">Strategies</a>
    <a href="/runs">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
    <a href="/truth">Truth</a>
    <a href="/policies">Policies</a>
  </nav>

  <main>
    <div class="row" style="align-items: center; margin-bottom: 1rem;">
      <h1>Compare Strategies</h1>
      <button onclick="window.location.href='/strategies'" style="margin-left: auto;">← Back</button>
    </div>

    <section class="card">
      <h2>Strategy Comparison</h2>
      <div id="comparison" class="compare-grid">
        <p style="color: #999;">Loading strategies...</p>
      </div>
    </section>

    <section class="card">
      <h2>Differences Summary</h2>
      <div id="differences" style="background: #f9f9f9; padding: 1rem; border-radius: 4px;">
        <p style="color: #999;">Analyzing differences...</p>
      </div>
    </section>
  </main>

  <script src="/public/strategy-compare.js"></script>
</body>
</html>

