<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI — Optimization Results</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <nav>
    <a href="/strategies">Strategies</a>
    <a href="/runs">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
    <a href="/truth">Truth</a>
    <a href="/policies">Policies</a>
    <a href="/optimize">Optimize</a>
  </nav>

  <main>
    <div class="row" style="align-items: center; margin-bottom: 1rem;">
      <h1>Optimization Results</h1>
      <button onclick="window.location.href='/optimize'" style="margin-left: auto;">← Back</button>
    </div>

    <section class="card">
      <h2>Run Summary</h2>
      <div id="summary" style="background: #f9f9f9; padding: 1rem; border-radius: 4px;">
        <p style="color: #999;">Loading...</p>
      </div>
    </section>

    <section class="card">
      <h2>Top Configurations</h2>
      <div class="row" style="margin-bottom: 1rem;">
        <label>Sort by:
          <select id="sortBy">
            <option value="objective_score">Objective Score</option>
            <option value="avg_r">Avg R</option>
            <option value="win_rate">Win Rate</option>
            <option value="profit_factor">Profit Factor</option>
            <option value="total_r">Total R</option>
          </select>
        </label>
        <button id="exportCsv">Export CSV</button>
        <button id="exportJson">Export JSON</button>
      </div>
      <div class="table-scroll">
        <table id="tblResults">
          <thead>
            <tr>
              <th>Rank</th>
              <th>TP Mult</th>
              <th>SL Mult</th>
              <th>Time Stop</th>
              <th>Trail</th>
              <th>Score</th>
              <th>Avg R</th>
              <th>Win Rate</th>
              <th>Profit Factor</th>
              <th>Total R</th>
              <th>Trades</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
      <p class="hint"><span id="resultCount">0</span> configurations tested</p>
    </section>

    <section class="card">
      <h2>Parameter Heatmap</h2>
      <div id="heatmap" style="text-align: center; padding: 2rem;">
        <p style="color: #999;">Heatmap visualization coming soon...</p>
      </div>
    </section>

    <section class="card">
      <h2>Quality Filter Results</h2>
      <div id="qualityStats" style="background: #f9f9f9; padding: 1rem; border-radius: 4px;">
        <p style="color: #999;">Loading...</p>
      </div>
    </section>
  </main>

  <script src="/public/optimize-results.js"></script>
</body>
</html>

