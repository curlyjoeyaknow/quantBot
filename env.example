# QuantBot Environment Variables Template
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEFAULT_CHAT=-1002523160967
ADMIN_USERS=123456789,987654321

# API Keys
BIRDEYE_API_KEY=your_birdeye_api_key_here
HELIUS_API_KEY=your_helius_api_key_here

# Database Configuration
DATABASE_PATH=data/quantbot.db

# Simulation Configuration
DEFAULT_INITIAL_BALANCE=100
DEFAULT_POSITION_SIZE=2.5
DEFAULT_SLIPPAGE=0.03
DEFAULT_FEES=0.005

# Monitoring Configuration
PRICE_UPDATE_INTERVAL=5000
ALERT_COOLDOWN_MINUTES=5
SUMMARY_INTERVAL_HOURS=1

# Cache Configuration
CACHE_EXPIRY_HOURS=24
CACHE_DIRECTORY=data/cache

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/quantbot.log

# Development Configuration
NODE_ENV=development
DEBUG=false
