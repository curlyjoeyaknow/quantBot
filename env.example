# QuantBot Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==== Telegram Bot Configuration ====
BOT_TOKEN=your_telegram_bot_token_here       # Telegram Bot API token
TELEGRAM_DEFAULT_CHAT=-1002523160967         # Default Telegram chat/group ID for notifications
ADMIN_USERS=123456789,987654321              # Comma-separated list of admin Telegram user IDs

# ==== API Keys ====
BIRDEYE_API_KEY=your_birdeye_api_key_here    # Birdeye API key for on-chain price data
BIRDEYE_API_KEY_1=your_birdeye_api_key_1    # Additional Birdeye API key (for rate limiting)
HELIUS_API_KEY=your_helius_api_key_here      # Helius API key for Solana blockchain access

# ==== ClickHouse Configuration ====
USE_CLICKHOUSE=false                          # Enable ClickHouse for OHLCV data storage (faster queries)
CLICKHOUSE_HOST=localhost                     # ClickHouse server host
CLICKHOUSE_PORT=18123                         # ClickHouse HTTP port (mapped from container's 8123)
CLICKHOUSE_USER=default                       # ClickHouse username
CLICKHOUSE_PASSWORD=                          # ClickHouse password (empty for default)
CLICKHOUSE_DATABASE=quantbot                  # ClickHouse database name

# ==== Database Configuration ====
DATABASE_PATH=data/quantbot.db               # Path to SQLite database file (legacy)

# Postgres (DEPRECATED - being phased out in favor of DuckDB + Prometheus)
# These variables are no longer required for new deployments
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=quantbot
# POSTGRES_PASSWORD=
# POSTGRES_DATABASE=quantbot
# POSTGRES_MAX_CONNECTIONS=10

# ==== Simulation Configuration ====
DEFAULT_INITIAL_BALANCE=100                  # Initial SOL balance for simulations
DEFAULT_POSITION_SIZE=2.5                    # SOL used per simulated trade
DEFAULT_SLIPPAGE=0.03                        # Slippage rate for simulated trades (e.g., 0.03 = 3%)
DEFAULT_FEES=0.005                           # Trading fees for simulations (0.005 = 0.5%)

# ==== Monitoring Configuration ====
PRICE_UPDATE_INTERVAL=5000                   # Milliseconds between price updates (e.g., 5000 = 5s)
ALERT_COOLDOWN_MINUTES=5                     # Minimum minutes between alerts for the same token
SUMMARY_INTERVAL_HOURS=1                     # Hours between periodic summary updates

# ==== Cache Configuration ====
CACHE_EXPIRY_HOURS=24                        # Cached data expiration time in hours
CACHE_DIRECTORY=data/cache                   # Directory for cache files

# ==== Logging Configuration ====
LOG_LEVEL=info                               # Log output level: debug, info, warn, error
LOG_FILE=logs/quantbot.log                   # Log file path

# ==== Development Configuration ====
NODE_ENV=development                         # Node environment: development, production, etc.
DEBUG=false                                  # Enable verbose debug output (true/false)

# ==== Shyft/Yellowstone Configuration ====
SHYFT_API_KEY=your_shyft_api_key_here          # Shyft API key for price data
SHYFT_X_TOKEN=your_shyft_x_token_here          # Shyft x-token for Yellowstone gRPC
SHYFT_WS_URL=wss://api.shyft.to/v1/stream      # Shyft WebSocket URL
SHYFT_GRPC_URL=https://grpc.ams.shyft.to      # Shyft Yellowstone gRPC endpoint

# ==== Alert Configuration ====
ALERT_CHAT_IDS=123456789,987654321             # Comma-separated Telegram chat IDs for alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token     # Telegram bot token for sending alerts

# ==== Live Trade Alert Configuration ====
LIVE_TRADE_ALERT_GROUP_IDS=-1001234567890,-1009876543210  # Comma-separated Telegram group IDs for live trade entry alerts
LIVE_TRADE_MONITOR_WINDOW_DAYS=7              # Number of days to monitor tokens from caller_alerts (default: 7)
