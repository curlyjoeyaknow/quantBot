{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"],
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/api-clients": ["../api-clients/src"],
      "@quantbot/api-clients/*": ["../api-clients/src/*"],
      "@quantbot/simulation": ["../simulation/src"],
      "@quantbot/simulation/*": ["../simulation/src/*"],
      "@quantbot/ingestion": ["../ingestion/src"],
      "@quantbot/ingestion/*": ["../ingestion/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../api-clients" },
    { "path": "../storage" },
    { "path": "../simulation" },
    { "path": "../ingestion" }
  ]
}

