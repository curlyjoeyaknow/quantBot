{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "paths": {
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"],
      "@quantbot/infra": ["../infra/src"],
      "@quantbot/infra/*": ["../infra/src/*"],
      "@quantbot/infra/utils": ["../infra/src/utils/index.ts", "../infra/dist/utils/index.d.ts"],
      "@quantbot/infra/storage": ["../infra/src/storage/index.ts", "../infra/dist/storage/index.d.ts"],
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/api-clients": ["../api-clients/src"],
      "@quantbot/api-clients/*": ["../api-clients/src/*"],
      "@quantbot/simulation": ["../simulation/src"],
      "@quantbot/simulation/*": ["../simulation/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "**/*.test.ts",
    "src/candles.ts"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../infra" },
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../api-clients" }
  ]
}

