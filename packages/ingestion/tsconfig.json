{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/TelegramAlertIngestionService.ts",
    "src/TelegramCallIngestionService.ts"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../api-clients" },
    { "path": "../ohlcv" },
  ]
}

