{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"],
      "@quantbot/infra": ["../infra/src"],
      "@quantbot/infra/*": ["../infra/src/*"],
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.html"],
  "exclude": ["dist", "node_modules", "tests", "**/*.d.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../infra" },
    { "path": "../utils" },
    { "path": "../storage" }
  ]
}
