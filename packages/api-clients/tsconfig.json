{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "paths": {
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/observability": ["../observability/src"],
      "@quantbot/observability/*": ["../observability/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../observability" }
  ]
}

