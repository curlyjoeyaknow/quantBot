{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"],
      "@quantbot/api-clients": ["../api-clients/src"],
      "@quantbot/api-clients/*": ["../api-clients/src/*"],
      "@quantbot/simulation": ["../simulation/src"],
      "@quantbot/simulation/*": ["../simulation/src/*"],
      "@quantbot/workflows": ["../workflows/src"],
      "@quantbot/workflows/*": ["../workflows/src/*"],
      "@quantbot/jobs": ["../jobs/src"],
      "@quantbot/jobs/*": ["../jobs/src/*"],
      "@quantbot/ingestion": ["../ingestion/src"],
      "@quantbot/ingestion/*": ["../ingestion/src/*"],
      "@quantbot/analytics": ["../analytics/src"],
      "@quantbot/analytics/*": ["../analytics/src/*"],
      "@quantbot/observability": ["../observability/src"],
      "@quantbot/observability/*": ["../observability/src/*"],
      "@quantbot/ohlcv": ["../ohlcv/src"],
      "@quantbot/ohlcv/*": ["../ohlcv/src/*"],
      "@quantbot/data": ["../data/src"],
      "@quantbot/data/*": ["../data/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../observability" },
    { "path": "../api-clients" },
    { "path": "../analytics" },
    { "path": "../ohlcv" },
    { "path": "../ingestion" },
    { "path": "../simulation" },
    { "path": "../workflows" },
    { "path": "../jobs" },
    { "path": "../data" }
  ]
}

