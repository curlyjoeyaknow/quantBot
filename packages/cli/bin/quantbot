#!/usr/bin/env node
/**
 * QuantBot CLI Wrapper
 * 
 * This wrapper uses tsx to run the TypeScript source directly,
 * which properly handles workspace package resolution.
 */

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);
const cliPath = join(__dirname, '..', 'src', 'bin', 'quantbot.ts');

const args = process.argv.slice(2);

// Use tsx to run the TypeScript source
const tsxProcess = spawn('pnpm', ['exec', 'tsx', cliPath, ...args], {
  stdio: 'inherit',
  shell: true,
  cwd: join(__dirname, '..', '..', '..'),
});

tsxProcess.on('exit', (code) => {
  process.exit(code ?? 0);
});


