{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"],
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/lab/*": ["../lab/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../core" },
    { "path": "../storage" },
    { "path": "../utils" },
    { "path": "../lab" }
  ]
}

