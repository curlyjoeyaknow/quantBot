<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI â€” Runs</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <nav>
    <a href="/dashboard">Dashboard</a>
    <a href="/strategies">Strategies</a>
    <a href="/runs" class="active">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
    <a href="/scored">Scored</a>
    <a href="/truth">Truth</a>
    <a href="/policies">Policies</a>
  </nav>

  <main>
    <h1>Backtest Runs</h1>

    <section class="card">
      <h2>Start Run</h2>
      <div class="grid">
        <label>Strategy<br/>
          <select id="strategy"></select>
        </label>
        <label>Caller filter (optional)<br/>
          <input id="filter" placeholder="TY/ACC" />
        </label>

        <label>Interval<br/>
          <select id="interval">
            <option>15s</option>
            <option selected>1m</option>
            <option>5m</option>
          </select>
        </label>

        <label>From (ISO)<br/>
          <input id="from" placeholder="2024-01-01T00:00:00Z" />
        </label>

        <label>To (ISO)<br/>
          <input id="to" placeholder="2024-01-31T23:59:59Z" />
        </label>

        <label>Taker fee (bps)<br/>
          <input id="fee" value="30" />
        </label>

        <label>Slippage (bps)<br/>
          <input id="slip" value="10" />
        </label>

        <label>Position (USD)<br/>
          <input id="pos" value="1000" />
        </label>
      </div>

      <div class="row">
        <button id="run">Run backtest</button>
        <span id="msg"></span>
      </div>
    </section>

    <section class="card">
      <h2>Recent Runs</h2>
      <table id="tbl">
        <thead><tr><th>Run</th><th>Strategy</th><th>Status</th><th>Created</th></tr></thead>
        <tbody></tbody>
      </table>
    </section>
  </main>

  <script src="/public/runs.js"></script>
</body>
</html>

