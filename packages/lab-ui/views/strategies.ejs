<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lab UI â€” Strategies</title>
  <link rel="stylesheet" href="/public/style.css" />
</head>
<body>
  <nav>
    <a href="/strategies" class="active">Strategies</a>
    <a href="/runs">Runs</a>
    <a href="/leaderboard">Leaderboard</a>
  </nav>

  <main>
    <h1>Strategy Builder</h1>

    <section class="card">
      <h2>Create Strategy</h2>
      <div class="grid">
        <label>Name<br/><input id="name" placeholder="e.g. Ladder+Trail+Ichimoku" /></label>
        <label>ExitPlan JSON<br/>
          <textarea id="config" rows="12" spellcheck="false"></textarea>
        </label>
      </div>
      <div class="row">
        <button id="seed">Seed example</button>
        <button id="save">Save strategy</button>
        <span id="msg"></span>
      </div>
    </section>

    <section class="card">
      <h2>Saved Strategies</h2>
      <table id="tbl">
        <thead><tr><th>ID</th><th>Name</th><th>Created</th></tr></thead>
        <tbody></tbody>
      </table>
    </section>
  </main>

  <script src="/public/strategies.js"></script>
</body>
</html>

