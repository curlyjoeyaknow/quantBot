{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/simulation": ["../simulation/src"],
      "@quantbot/services": ["../services/src"],
      "@quantbot/monitoring": ["../monitoring/src"],
      "@quantbot/bot": ["../bot/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "figma-plugin",
    "scripts/figma-code-viewer-plugin",
    "scripts/figma-convert-frames-plugin.ts"
  ]
}
