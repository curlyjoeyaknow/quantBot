{
  "name": "@quantbot/utils",
  "version": "1.0.0",
  "description": "Shared utilities for QuantBot",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./test-helpers/test-gating": {
      "types": "./dist/test-helpers/test-gating.d.ts",
      "import": "./dist/test-helpers/test-gating.js",
      "default": "./dist/test-helpers/test-gating.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@quantbot/core": "workspace:*",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^5.0.0",
    "dotenv": "^17.2.3",
    "execa": "^9.4.0",
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^4.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
