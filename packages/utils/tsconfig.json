{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "paths": {
      "@quantbot/core": ["../core/dist"],
      "@quantbot/core/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/fetch-historical-candles.ts",
    "src/RepeatSimulationHelper.ts"
  ],
  "references": [
    { "path": "../core" }
  ]
}

