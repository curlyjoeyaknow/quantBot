{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "paths": {
      "@quantbot/utils": ["../utils/src"],
      "@quantbot/utils/*": ["../utils/src/*"],
      "@quantbot/storage": ["../storage/src"],
      "@quantbot/storage/*": ["../storage/src/*"],
      "@quantbot/core": ["../core/src"],
      "@quantbot/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../storage" }
  ]
}

