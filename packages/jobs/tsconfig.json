{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/dist/**", "**/*.test.ts", "dist"],
  "references": [
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../storage" },
    { "path": "../api-clients" },
    { "path": "../ohlcv" },
    { "path": "../observability" },
    { "path": "../ingestion" }
    // Removed ../workflows to break circular dependency
    // workflows depends on jobs, so jobs cannot depend on workflows
  ]
}

