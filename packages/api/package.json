{
  "name": "@quantbot/api",
  "version": "1.0.0",
  "description": "REST API for QuantBot (Fastify-based)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@quantbot/core": "workspace:*",
    "@quantbot/infra": "workspace:*",
    "@quantbot/cli": "workspace:*",
    "@quantbot/workflows": "workspace:*",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.2.4",
    "fastify": "^5.6.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}

